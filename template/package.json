{
  "name": "{{basename}}",
  "version": "0.0.0",
  "description": "{{{description}}}",
  "repository": {
    "type": "git",
    "url": "git@github.com:{{organization}}/{{basename}}.git"
  },
  "homepage": "https://github.com/{{organization}}/{{basename}}",
  "author": {
    "name": "Nils Knappmeier",
    "email": "npm@knappi.org",
    "url": "https://github.com/nknapp"
  },
  "bugs": {
    "url": "https://github.com/{{organization}}/{{basename}}/issues"
  },
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --fix .",
    "test": "mocha --recursive && standard --fix",
    "coverage": "istanbul cover ./node_modules/.bin/_mocha --report lcovonly",
    "thought": "thought run -a",
    "version": "thoughtful changelog -o -a && npm run thought",
    "pre-commit": "eslint --fix . && thoughtful precommit"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "husky": "^0.13.2",
    "mocha": "^2.3.3",
    "thoughtful-release": "^0.3.0",
    "trace-and-clarify-if-possible": "^1.0.0"
  },
  "standard": {
    "ignore": [
      "test/fixtures/**"
    ]
  },
  "files": [
    "index.js",
    "lib",
    "bin"
  ],
  "config": {
    "ghooks": {
      "pre-commit": "standard"
    }
  },
  "keywords": []
}
